<resources>
    <!-- Base application theme. -->
    <style name="Theme.SalesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Category Tab Styles -->
    <style name="CategoryTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CategoryTab.Selected" parent="CategoryTab">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Product Item Styles -->
    <style name="ProductImageCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <style name="ProductItemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>

    <style name="ProductImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProductImage.Rounded">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ProductTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProductTitle.MultiLine" parent="ProductTitle">
        <item name="android:lines">2</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="BottomNavItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="BottomNavItem.Selected" parent="BottomNavItem">
        <!-- Can add specific selected state styling here if needed -->
    </style>

    <style name="BottomNavIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/lightGray</item>
    </style>

    <style name="BottomNavText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="BottomNavText.Selected" parent="BottomNavText">
        <item name="android:textColor">@color/appBlue</item>
    </style>

    <!-- Special tint for the selected Home icon -->
    <style name="BottomNavIcon.Selected" parent="BottomNavIcon">
        <item name="android:tint">@color/appBlue</item>
    </style>

    <style name="FormEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/form_input_background</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FormLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableHeaderCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TableHorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="TableVerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="OtpEditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Normal Tab for Selection Logic -->
    <style name="CategoryTabNormal">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Selected Tab for Selection Logic -->
    <style name="CategoryTabActive">
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>