<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="-20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Search bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Transactions">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Scrollable transaction list -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fadeScrollbars="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <!-- Transaction 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/08/2025 [9:05 AM]\nBread Loaf ×1 (₱65.00)\nButter 250g ×2 (₱96.00)\nTotal: ₱161.00"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />

                <!-- Transaction 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/06/2025 [2:27 PM]\nCoffee 200g ×1 (₱138.00)\nSugar 1kg ×3 (₱117.00)\nTotal: ₱255.00"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />

                <!-- Transaction 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/05/2025 [7:41 PM]\nSoy Sauce 150g ×2 (₱48.25)\nVinegar 350ml ×1 (₱34.75)\nTotal: ₱83.00"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />

                <!-- Example of more -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10/03/2025 [4:22 PM]\nInstant Noodles ×5 (₱59.50)\nSoft Drinks 1L ×2 (₱72.00)\nTotal: ₱131.50"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
